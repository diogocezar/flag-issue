{
  "manifest_version": 3,
  "name": "GitHub Issue Flag Toggle",
  "version": "1.0",
  "description": "Adiciona ou remove flags dos t√≠tulos das issues do GitHub",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://github.com/*"
  ],
  "action": {
    "default_title": "GitHub Issue Flag Toggle"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ]
}